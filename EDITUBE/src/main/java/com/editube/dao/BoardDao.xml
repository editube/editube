<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper 
	PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace= "com.editube.dao.BoardDao">
	<select id="getList" resultType="com.editube.dto.BoardDto">
		<![CDATA[
		SELECT*FROM CBLIST_1
		WHERE RONUM >= (${pageNum}*${cnt})-(${cnt}-1)
		AND RONUM <= ${pageNum}*${cnt}
		]]>
	</select>
	<select id="getBoardCount" resultType="Integer">
		SELECT COUNT(*) FROM
		CBLIST_1
	</select>
	<select id="getContent" parameterType="Integer" 
	resultType="com.editube.dto.BoardDto">
	SELECT*FROM CBLIST_1
	WHERE CBNUM=#{cbnum}
	</select>
	
	<insert id="boardInsert" parameterType="com.editube.dto.BoardDto" 
	useGeneratedKeys="true" keyProperty="cbnum">
	<selectKey keyProperty="cbnum" resultType="Integer"
	order="BEFORE">
	SELECT CBOARD_SEQ.NEXTVAL FROM DUAL
	</selectKey>
	INSERT INTO CB
	VALUES(${cbnum},#{cbnickname},#{cbcontent},#{cbtitle},DEFAULT)
	</insert>
</mapper>